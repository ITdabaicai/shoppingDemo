/* pages/msorder/msorder.wxss */
.presonmsg{
  height: 224rpx;
  background: #fff;
  position: relative;
  font-size:24rpx;
}
.msgimg{
  position: absolute;
  top:80rpx;
  left:20rpx;
}
.msgname{
  position: absolute;
  top:50rpx;
  left:70rpx;
}
.msgphone{
  position: absolute;
  top:50rpx;
  right:60rpx;
}
.msgadd{
  position: absolute;
  top:100rpx;
  left:70rpx;
  width: 75%;
}
.msgtip{
  position: absolute;
  bottom:15rpx;
  left:70rpx;
  color:#F2CC3C;
}
.msgenter{
  position: absolute;
  top:130rpx;
  right:60rpx;
}
.msgcaidai{
  position: absolute;
  bottom:-3rpx;
}
.goodmsg{
  height:224rpx;
  background: #FCFCFC;
  position: relative;
}
.goodimg{
  position: absolute;
  top:30rpx;
  left: 30rpx;
}
.goodname{
  position: absolute;
  top:30rpx;
  left: 230rpx;
  font-size:24rpx;
  color:#000000;
}
.goodtype{
  position: absolute;
  top:100rpx;
  left: 230rpx;
  font-size:22rpx;
  color:#999999;
}
.goodprice{
  position: absolute;
  top:150rpx;
  left: 230rpx;
  font-size:30rpx;
  color:#FF3B30;
}
.goodnum{
  position: absolute;
  top:150rpx;
  right: 30rpx;
  font-size:30rpx;
  color:#000000;
}
.weui-cell{
  background: #fff;
  position: static;
}
.weui-cell__bd,.weui-cell__ft{
  color:#666666;
  font-size:32rpx;
}
.wx-switch-input {
  background: #D73F36 !important;
  border: #f5f5f5 1px solid !important;
}
.bottomview{
  position: fixed;
  bottom:0;
  height: 100rpx;
  width: 100%;
}
.paytip{
  width:25%;
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  font-size:30rpx;
  display: inline-table;
  text-align: right;
}
.paymoney{
  width:50%;
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  font-size:30rpx;
  color:#FF3B30;
  display: inline-table;
  text-align: left;
}
.topay{
  width: 25%;
  height: 100rpx;
  line-height: 100rpx;
  background: #D73F36;
  font-size:30rpx;
  text-align: center;
  color: #fff;
  display: inline-table;
}