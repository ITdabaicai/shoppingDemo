/* pages/order/order.wxss */
.orderstate{
    background: #D73F36;
    color:#fff;
    font-size:36rpx;
    height: 136rpx;
    line-height: 136rpx;
    padding-left:50rpx;
}
.orderfollow{
  height:152rpx;
  background: #fff;
  border-bottom: 1px solid #f5f5f5;
  position: relative;
}
.orderimg{
  position: absolute;
  top:50rpx;
  left: 30rpx;
}
.state,.orderget{
  position: absolute;
  top:20rpx;
  left: 100rpx;
  font-size: 32rpx;
}
.ordertime,.orderadd{
  position: absolute;
  top:80rpx;
  left: 100rpx;
  font-size: 28rpx;
  color:#999999;
}
.ordernum{
  position: absolute;
  top:20rpx;
  right: 30rpx;
  font-size: 28rpx;
